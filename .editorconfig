# top-most EditorConfig file
root = true

[*]
indent_style = space
indent_size = 2

end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true

[*.{py,c,cpp,txt}]
indent_style = space
indent_size = 4

[*.{java,rb,html,js,css,zsh,}]
indent_style = space
indent_size = 2

[*.go]
indent_style = tab
indent_size = 4

[*.sh]
indent_style = space
indent_size = 2

[Makefile]
indent_style = tab
indent_size = 4

[*.md]
trim_trailing_whitespace = false

[{package.json,.travis.yml}]
indent_style = space
indent_size = 2

[*.vim]
trim_trailing_whitespace = false

[*.ps1]
indent_style = space
indent_size = 2