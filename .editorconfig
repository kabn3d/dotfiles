# top-most EditorConfig file
root = true

[*]
indent_style = space
indent_size = 4
end_of_line = lf
charset = utf-8
insert_final_newline = true
trim_trailing_whitespace = true

[*.rs]
indent_size = 4

[*.conf]
indent_size = 4

[*.{c,cpp,txt}]
indent_size = 4

[*.{py,j2}]
indent_size = 4

[*.go]
indent_style = tab
indent_size = 4

[Makefile]
indent_style = tab
indent_size = 4

[*.md]
trim_trailing_whitespace = false

[*.vim]
trim_trailing_whitespace = false
